<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PreferencesActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choisissez votre unité de mesure préférentielle" />

    <Button
        android:id="@+id/buttonStandard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Standard (K)"
        android:onClick="onClick"
        tools:ignore="OnClick"/>

    <Button
        android:id="@+id/buttonMetric"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Metric (°C)"
        android:onClick="onClick"
        tools:ignore="OnClick"/>

    <Button
        android:id="@+id/buttonImperial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Imperial (°F)"
        android:onClick="onClick"
        tools:ignore="OnClick"/>

    <TextView
        android:id="@+id/textTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

</LinearLayout>